<% layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-4">
        <div class="col-6 offset-3">
           <h3 class="offset-2">Login on Wonderlust</h3>
           <form action="/login" method="post" class="needs-validation" novalidate>
               <div class="mb-3 mt-4">
                 <label for="username" class="form-label">Username</label>
                 <input name="username" id="username"  type="text" placeholder="Enter your Name" class="form-control" required>
                  <div class="valid-feedback">
                     Please enter a valid name
                  </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" placeholder="Enter Password" class="form-control" required>
                    <div class="invalid-feedback">
                       Please enter a valid password
                    </div>
                 </div> 
                
                 <button class="btn btn-success">Login</button>
            </form>
       </div> 
   </div>
 </body> 
        